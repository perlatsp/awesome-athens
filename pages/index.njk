{% extends "pages/partials/html.njk" %}

{% block content %}
    <div class="cards">
        {% for group in groups %}
            <a href="{{ group.url }}" target="_blank">
                <div class="card">
                    <div class="card-image">
                        <img src="{{ group.image }}">
                    </div>
                    <div class="card-content">
                        <span class="card-title grey-text text-darken-4">{{ group.name }}</span>
                        <p>{{ group.description }}</p>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}