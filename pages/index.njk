{% extends "pages/partials/html.njk" %}

{% block content %}
    <div id="cards">
        <div class="cards-grid list">
            {% for group in groups %}
                <div class="card">
                    <div class="card-image">
                        <img src="assets/placeholder.jpg">
                    </div>
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">{{ group.name }}<i class="material-icons right">more_vert</i></span>

                        <p>{{ group.description }}</p>
                    </div>
                    <div class="card-action">
                        <a href="{{ group.url }}">This is a link</a>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}


{% block js %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.5.0/list.min.js"></script>
    <script src="assets/script.js"></script>
{% endblock %}